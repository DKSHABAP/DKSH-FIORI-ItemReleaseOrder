<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>userActions}" class="custBox ">
		<VBox>
			<Table inset="false" fixedLayout="true"
				items="{ path: 'SalesHeaderModel>/salesDocItemList', filters: [{ path: 'acceptOrReject', operator: 'EQ', value1: 'R' },{ path: 'acceptOrReject', operator: 'EQ', value1: 'A' }] }"
				selectionChange="onSelectSingleSelectMaster" class="sapUiSizeCompact">
				<columns>
					<Column width="120px">
						<Label design="Bold" text="{i18n>item}"/>
					</Column>
					<Column width="120px">
						<Label design="Bold" text="{i18n>Material}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
						<Label design="Bold" text="{i18n>action}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
						<Label design="Bold" text="{i18n>reason}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
						<Label design="Bold" text="{i18n>comments}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<Text text="{SalesHeaderModel>salesItemOrderNo}" textAlign="Left"/>
						<Text text="{SalesHeaderModel>sapMaterialNum}" textAlign="Left"/>
						<Text text="{path: 'SalesHeaderModel>acceptOrReject', formatter:'.formatter.approveRejectText'}" textAlign="Left"/>
						<Text text="{SalesHeaderModel>reasonForRejection}" textAlign="Left"/>
						<Text text="{SalesHeaderModel>comments}" textAlign="Left"/>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
		<buttons>
			<Button text="{i18n>close}" press="handleCloseValueHelp($event, 'DisplayMarkedItems')"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>