<core:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid" xmlns:fb="sap.ui.comp.filterbar">
	<l:VerticalLayout width="100%">
		<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" showFilterConfiguration="false" useToolbar="false" showGoOnFB="false"
			class="fbFilterLevel">
			<fb:filterGroupItems>
				<fb:FilterGroupItem groupName="G1" name="A" label="{i18n>salesOrg}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedSalesOrg}" tooltip="{SaleHdrModelSet>/selectedSalesOrg}" maxLength="100"
							liveChange="salesDocValidationHandle" placeholder="{i18n>plchSalesOrg}" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'SalesOrg', '/SearchHelp_SalesOrgSet', 'ATR01', 'Salesorg')" valueHelpOnly="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="B" label="{i18n>division}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedDivision}" tooltip="{filterModel>/selectedDivision}" maxLength="100" placeholder="{i18n>plcDiv}"
							showValueHelp="true" valueHelpRequest="valueHelpRequest($event, 'Division', '/SearchHelp_DivisionSet', 'ATR03', 'Division')"
							valueHelpOnly="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="C" label="{i18n>tltpSalesDocNo}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<HBox>
							<Input class="sapUiSmallMarginEnd" width="95%" value="{filterModel>/selectedSalesDocNumInitial}" placeholder="{i18n>tltpFrom}"
								tooltip="{filterModel>/selectedSalesDocNumInitial}" type="Number" liveChange="salesDocValidationHandle"/>
							<Input value="{filterModel>/selectedSalesDocNumEnd}" type="Number" placeholder="{i18n>tltpTo}"
								tooltip="{filterModel>/selectedSalesDocNumEnd}" liveChange="salesDocValidationHandle"/>
						</HBox>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="D" label="{i18n>tltpDateRange}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<DateRangeSelection id="idSalesDateRange" displayFormat="dd/MM/yyyy" dateValue="{filterModel>/selectedSalesDocDateFrom}"
							secondDateValue="{filterModel>/selectedSalesDocDateTo}" change="dateRangeSelectHandle"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="E" label="{i18n>CustomerPONo}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectCustomerPo}" tooltip="{filterModel>/selectCustomerPo}" maxLength="10"
							liveChange="salesDocValidationHandle" placeholder="{i18n>plchCustPo}"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="F" label="{i18n>tltpMatGrp}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedMatGrp}" tooltip="{filterModel>/selectedMatGrp}" maxLength="500" liveChange="salesDocValidationHandle"
							placeholder="{i18n>plchMatGrp}" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'MaterialGroup', '/SearchHelp_MaterialGroupSet', 'ATR04', 'MaterialGroup')" valueHelpOnly="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="G" label="{i18n>MaterialGroup4}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedMatGrp4}" tooltip="{filterModel>/selectedMatGrp4}" maxLength="500" liveChange="salesDocValidationHandle"
							placeholder="{i18n>plchMatGrp4}" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'MaterialGroup4', '/SearchHelp_MaterialGroup4Set', 'ATR05', 'MaterialGroup4')"
							valueHelpOnly="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="H" label="{i18n>soldToPartyTitle}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input showValueHelp="true" valueHelpOnly="true" value="{filterModel>/selectedSoldToParty}" tooltip="{filterModel>/selectedSoldToParty}"
							valueHelpRequest="valueHelpRequestSoldToParty($event, 'SoldToParty', 'idSoldtoPartyTable')" id="soFragFilter1" visible="true"
							placeholder="{i18n>plchSoldtp}" showValueStateMessage="true" valueStateText="abc"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="I" label="{i18n>distChannel}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input id="idFilterDistChan" valueHelpOnly="true" value="{filterModel>/selectedDistChannel}" tooltip="" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'DistChan', '/SearchHelp_DistChnlSet', 'ATR02', 'Distchl')" placeholder="{i18n>plchDistCha}"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="J" label="{i18n>tltpItemDelBlock}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedDeliveryBlock}" tooltip="{filterModel>/selectedDeliveryBlock}" liveChange="salesDocValidationHandle"
							placeholder="{i18n>plchItmDelBlock}" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'ItemDeliveryBlock', '/SearchHelp_ItemDeliveryBlockSet', '', '')" maxLength="100"
							valueHelpOnly="true"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="K" label="{i18n>ShipToParty}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedShipToParty}" tooltip="{filterModel>/selectedShipToParty}" liveChange="salesDocValidationHandle"
							placeholder="{i18n>EntrShipTpParty}" maxLength="10"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="L" label="{i18n>HeaderDeliveryBlock}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedHeaderDeliveryBlock}" tooltip="{filterModel>/selectedHeaderDeliveryBlock}"
							liveChange="salesDocValidationHandle" showValueHelp="true"
							valueHelpRequest="valueHelpRequest($event, 'HeaderDeliveryBlock', '/SearchHelp_HeaderDeliveryBlockSet', '', '')"
							placeholder="{i18n>EntrHDB}" maxLength="100"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="M" label="{i18n>MaterialCode}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedMaterialNum}" tooltip="{filterModel>/selectedMaterialNum}" placeholder="{i18n>EnterMaterialCode}"
							maxLength="18" liveChange="salesDocValidationHandle"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="N" label="{i18n>SalesTerritory}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedSalesTerritory}" tooltip="{filterModel>/selectedSalesTerritory}"
							placeholder="{i18n>EnterSalesTerritory}" maxLength="10" liveChange="salesDocValidationHandle"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="G1" name="O" label="{i18n>SalesTeam}" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input value="{filterModel>/selectedSalesTeam}" tooltip="{filterModel>/selectedSalesTeam}" placeholder="{i18n>EnterSalesTeam}"
							maxLength="10" liveChange="salesDocValidationHandle"/>
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>
		</fb:FilterBar>
	</l:VerticalLayout>
	<OverflowToolbar>
		<ToolbarSpacer/>
		<Button icon="sap-icon://action-settings" tooltip="{i18n>FilterPersonalization}" press="onPressFilterPersonalization"></Button>
		<Button icon="sap-icon://search" tooltip="{i18n>Search}" text="{i18n>Search}" type="Emphasized" press="onSearchSalesHeader"></Button>
		<Button icon="sap-icon://refresh" tooltip="{i18n>Reset}" text="{i18n>Reset}" press="onResetValueHelp"></Button>
		<ToolbarSpacer visible="false"/>
	</OverflowToolbar>
</core:FragmentDefinition>