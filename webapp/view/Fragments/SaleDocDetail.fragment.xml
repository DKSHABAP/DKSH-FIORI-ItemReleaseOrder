<core:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid">
	<VBox fitContainer="true" class="sapUiSmallMargin">
		<f:Form editable="true">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="5" labelSpanL="4" labelSpanM="3" labelSpanS="12" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0"
					emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="true"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer expandable="true">
					<f:formElements>
						<f:FormElement label="{i18n>SalesDocument}">
							<f:fields>
								<!--								<Text text="{MockData>SaleOrder}"/>-->
								<Text text="{ItemBlockModel>requestId}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>OrderType}">
							<f:fields>
								<Text text="{ItemBlockModel>detailLevel/0/orderType}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>DeliveryBlock}">
							<f:fields>
								<!--								<Text text="{MockData>DeliveryBlock}"/>-->
								<Text text="{ItemBlockModel>detailLevel/0/deliveryBlockCode} {ItemBlockModel>detailLevel/0/deliveryBlockCodeText}"
									class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>SalesDocDate}">
							<f:fields>
								<!--								<Text text="{MockData>SaleOrderDate}"/>-->
								<Text text="{path: 'ItemBlockModel>detailLevel/0/salesOrderDate', formatter:'.formatter.dateFormatter'}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>CustomerPONo}">
							<f:fields>
								<!--								<Text text="{MockData>CustomerPONumber}"/>-->
								<Text text="{ItemBlockModel>detailLevel/0/customerPo}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>distributionChnlFilter}">
							<f:fields>
								<!--								<Text text="{MockData>DistributionChannel}"/>-->
								<Text text="{ItemBlockModel>detailLevel/0/distributionChannel}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>SoldToParty}">
							<f:fields>
								<!--								<Text text="{MockData>SoldToParty}"/>-->
								<Text text="{ItemBlockModel>detailLevel/0/soldToParty} {ItemBlockModel>detailLevel/0/soldToPartyText}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>CreditStatus}">
							<f:fields>
								<!--								<Text text="{MockData>CreditStatus}"/>-->
								<Link text="{ItemBlockModel>detailLevel/0/creditBlock}" press="handleCreditBlockPress($event, ${ItemBlockModel>requestId})"
									class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>ShipToParty}">
							<f:fields>
								<!--								<Text text="{MockData>ShipToParty}"/>-->
								<Text text="{ItemBlockModel>detailLevel/0/shipToParty} {ItemBlockModel>detailLevel/0/shipToPartyText}" class="sapUiTinyMarginBegin"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<Table inset="false" fixedLayout="true" items="{path: 'ItemBlockModel>detailLevel/0/salesDocItemList', templateShareable: false}"
			mode="MultiSelect" selectionChange="onChangeSelectionItem" backgroundDesign="Solid">
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<SearchField width="30%" liveChange="onItemTableFreeSearch"></SearchField>
					<!-- need to enhance to restrict edit button by approval level -->
					<!--					<Button icon="sap-icon://edit" type="Transparent" tooltip="{i18n>Edit}" press="onPressEditItem"
						enabled="{parts:['SalesHeaderModel>/levelNum','SalesHeaderModel>/processor','SalesHeaderModel>/taskOwner'] , formatter:'.formatter.setEditRestriction'}"/>-->
					<Button icon="sap-icon://edit" type="Transparent" tooltip="{i18n>Edit}" press="onPressEditItem" enabled="true"/>
					<Button type="Transparent" text="{i18n>Save}" visible="false" press="onSaveEditItem($event, 'SavedMessage', ${ItemBlockModel>})"/>
					<Button type="Transparent" text="{i18n>Cancel}" visible="false" press="onCancelEditItem"/>
					<Button icon="sap-icon://accept" type="Accept" tooltip="{i18n>Approve}" class="dkshAcceptBtnStyle"
						press="onApprovePress($event, ${ItemBlockModel>})"/>
					<Button icon="sap-icon://decline" type="Reject" tooltip="{i18n>Reject}" class="dkshRejectBtnStyle"
						press="onRejectPress($event, 'Reject', ${ItemBlockModel>})"/>
					<Button icon="sap-icon://upload" type="Transparent" tooltip="{i18n>Submit}" press="onItemSubmission($event, ${ItemBlockModel>})"/>
					<Button icon="sap-icon://display" type="Transparent" tooltip="{i18n>DisplayActions}"
						press="onDisplayMarkedItems($event, 'DisplayMarkedItems')"/>
					<Button icon="sap-icon://reset" type="Transparent" tooltip="{i18n>resetDisplayBtn}" press="onResetDisplay"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" class="{'version-modal-header': condition, 'failure': !condition}">
					<HBox>
						<Label design="Bold" text="{i18n>ItemNo}" tooltip="{i18n>ItemNo}"/>
						<Button icon="sap-icon://drill-down" type="Transparent" tooltip="{i18n>Sort}" press="onDetailTableSortPress($event, 'salesItemOrderNo')"
							class="dkshAcceptBtnStyle"/>
					</HBox>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>Material}" tooltip="{i18n>Material}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Right">
					<Label design="Bold" text="{i18n>Quantity}" tooltip="{i18n>Quantity}"/>
				</Column>
				<Column demandPopin="true" width="4em" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>UoM}" tooltip="{i18n>tltpUom}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Right">
					<Label design="Bold" text="{i18n>UnitPrice}" tooltip="{i18n>UnitPrice}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Right">
					<Label design="Bold" text="{i18n>listPrice}" tooltip="{i18n>listPrice}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Right">
					<HBox alignItems="End">
						<Label design="Bold" text="{i18n>Amount}" tooltip="{i18n>Amount}" textAlign="Right"/>
						<Button icon="sap-icon://drill-down" type="Transparent" tooltip="{i18n>Sort}" press="onDetailTableSortPress($event, 'netWorth')"
							class="dkshAcceptBtnStyle"/>
					</HBox>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>StorageLoc}" tooltip="{i18n>tltpStoLoc}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>BatchNo}" tooltip="{i18n>BatchNo}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>MaterialGrp}" tooltip="{i18n>MaterialGroup}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>MaterialGrp4}" tooltip="{i18n>MaterialGroup4}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>ItemDlvBlock}" tooltip="{i18n>ItemDlvBlock}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>itemcategoryCol}" tooltip="{i18n>itemcategoryColTooltip}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>oldMatCodeCol}" tooltip="{i18n>oldMatCodeColTooltip}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left">
					<Label design="Bold" text="{i18n>ItemStatus}" tooltip="{i18n>oldMatCodeColTooltip}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<!-- Item No -->
						<HBox>
							<ObjectStatus text="{ItemBlockModel>salesItemOrderNo}"
								icon="{= ${ItemBlockModel>acceptOrReject} === 'A' || ${ItemBlockModel>acceptOrReject} === 'R' ? 'sap-icon://circle-task-2' : '' }"
								state="{= ${ItemBlockModel>acceptOrReject} === 'A' ? 'Success' : ${ItemBlockModel>acceptOrReject} === 'R' ? 'Error' : 'None' }"/>
						</HBox>
						<!-- Material -->
						<VBox>
							<Text text=" {parts:['ItemBlockModel>shortText','ItemBlockModel>sapMaterialNum'],formatter:'.formatter.concatenateMaterial'}"
								visible="{= !${ItemBlockModel>editMaterial}}"/>
							<Input value="{ItemBlockModel>sapMaterialNum}" change="onChangeItemValue($event, 'Material')" textAlign="Left" maxLength="9"
								visible="{= ${ItemBlockModel>editMaterial}}" placeholder="{i18n>tltpMaterial}"/>
							<Text text="{ItemBlockModel>shortText}" textAlign="Left" visible="{= ${ItemBlockModel>editMaterial}}" tooltip="{ItemBlockModel>shortText}"/>
						</VBox>
						<!-- Order Qty Sales -->
						<Input value="{ItemBlockModel>orderedQtySales}" change="onChangeItemValue($event, 'orderQty')" textAlign="Right"
							enabled="{= ${ItemBlockModel>editOrderQty}}" placeholder="{i18n>tltpQty}"/>
						<!-- salesUnit -->
						<VBox>
							<Text text="{ItemBlockModel>salesUnit}" textAlign="Left"/>
						</VBox>
						<!-- Net Price -->
						<Input value="{ItemBlockModel>netPrice}" textAlign="Right" enabled="{= ${ItemBlockModel>editNetPrice}}" placeholder="{i18n>tltpPrice}"
							change="onChangeItemValue($event, 'UnitPrice')"/>
						<!-- Spl Price -->
						<Text text="{ItemBlockModel>splPrice}" textAlign="Right"/>
						<!-- Net Price & Order Qty Sales & Doc Currency -->
						<Text text="{ItemBlockModel>netWorth} ({ItemBlockModel>docCurrency})" textAlign="Right"/>
						<!-- Storage Location -->
						<VBox>
							<Input value="{ItemBlockModel>storageLoc}" tooltip="{ItemBlockModel>storageLoc}" showValueHelp="true"
								valueHelpRequest="ValueHelpRequestItem($event, 'StorageLocation', '/SearchHelp_StorageLocationSet')" valueHelpOnly="true"
								enabled="{= ${ItemBlockModel>editSLoc}}"/>
						</VBox>
						<!-- Batch Num -->
						<VBox>
							<Input value="{ItemBlockModel>batchNum}" tooltip="{ItemBlockModel>batchNum}" showValueHelp="true"
								valueHelpRequest="ValueHelpRequestItem($event, 'BatchNo', '/SearchHelp_BatchNoSet')" valueHelpOnly="true"
								enabled="{= ${ItemBlockModel>editBatchNo}}"/>
						</VBox>
						<!-- Material Group -->
						<Text text="{ItemBlockModel>materialGroup}" textAlign="Left"/>
						<!-- Material Group 4 -->
						<Text text="{ItemBlockModel>materialGroup4}" textAlign="Left"/>
						<!-- Item Delivery Block -->
						<Text
							text="{parts:[{path:'ItemBlockModel>itemDlvBlockText'},{path:'ItemBlockModel>itemDlvBlock'}],formatter:'.formatter.concatenateMaterial'}"
							textAlign="Left"/>
						<!-- Item Category -->
						<Text text="{parts:[{path:'ItemBlockModel>itemCategText'},{path:'ItemBlockModel>itemCategory'}],formatter:'.formatter.concatenateMaterial'}"
							textAlign="Left"/>
						<!-- Old Material Code -->
						<Text text="{ItemBlockModel>oldMatCode}" textAlign="Left"/>
						<!-- Item Staging Status -->
						<ObjectStatus text="{ItemBlockModel>itemStagingStatus}"
							state="{parts:[{path:'ItemBlockModel>itemStagingStatus'}],formatter:'.formatter.status'}"/></cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</core:FragmentDefinition>