<core:FragmentDefinition xmlns="sap.m" xmlns:ui="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<Dialog title="{i18n>soldToPartyFragTitle}" contentWidth="65%">
		<f:SimpleForm layout="ResponsiveGridLayout" labelSpanL="4" editable="true" labelSpanM="3" emptySpanL="1" emptySpanM="0" columnsL="2"
			columnsM="2">
			<f:content>
				<core:Title/>
				<Label text="{i18n>soldtopartyid}" design="Bold" tooltip="{i18n>soldtopartyid}"/>
				<Input id="idSoldToPartCustID" tooltip="{filterModel>/SoldToPartId}" value="{filterModel>/SoldToPartId}" liveChange="soldToPartyLiveChange"
					change="custIdLiveChange" maxLength="10" showValueHelp="false" placeholder="{i18n>plchCustID}" showValueStateMessage="false"
					valueHelpOnly="true"/>
				<Label text="{i18n>soldtopartyname}" design="Bold" tooltip="{i18n>soldtopartyname}"/>
				<Input id="idSoldToPartDesc" tooltip="{filterModel>/SoldToPartName}" value="{filterModel>/SoldToPartName}"
					liveChange="soldToPartyLiveChange" maxLength="35" showValueHelp="false" placeholder="{i18n>plchCustName}"/>
				<Label text="{i18n>divisionCustIdFragLabel}" design="Bold" tooltip="{i18n>divisionCustIdFragLabel}"/>
				<Input id="idSoldToPartDivision" tooltip="{filterModel>/SoldToPartDivision}" value="{filterModel>/SoldToPartDivision}"
					liveChange="soldToPartyLiveChange" showValueHelp="true"
					valueHelpRequest="valueHelpRequest($event, 'Division', '/SearchHelp_DivisionSet', 'ATR03', 'Division')" placeholder="{i18n>plchDiv}"
					valueHelpOnly="true"/>
				<core:Title/>
				<Label text="{i18n>salesOrgCustIdFragLabel}" design="Bold" tooltip="{i18n>tltpSalesOrg}"/>
				<Input id="idSoldToPartSaleOrh" tooltip="{filterModel>/SoldToPartSaleOrg}" value="{filterModel>/SoldToPartSaleOrg}"
					liveChange="soldToPartyLiveChange" showValueHelp="true"
					valueHelpRequest="valueHelpRequest($event, 'SalesOrg', '/SearchHelp_SalesOrgSet', 'ATR01', 'Salesorg')" placeholder="{i18n>plcSalesOrg}"
					valueHelpOnly="true"/>
				<Label text="{i18n>distChanlCustIdFragLabel}" design="Bold" tooltip="{i18n>tltpDistChan}"/>
				<Input id="idSoldToPartDistChn" tooltip="{filterModel>/SoldToPartDistChannel}" value="{filterModel>/SoldToPartDistChannel}"
					liveChange="soldToPartyLiveChange" showValueHelp="true"
					valueHelpRequest="valueHelpRequest($event, 'DistChan', '/SearchHelp_DistChnlSet', 'ATR02', 'Distchl')" placeholder="{i18n>plchDistChan}"
					valueHelpOnly="true"/>
				<Label/>
				<Button icon="sap-icon://search" text="{i18n>Search}" tooltip="{i18n>Search}" type="Accept"
					press="onSearchSoldToParty($event, 'SoldToParty', '/ZSoldToPartySH', 'idSoldtoPartyTable')">
					<layoutData>
						<l:GridData span="XL3 L3 M4 S6"/>
					</layoutData>
				</Button>
				<Button icon="sap-icon://refresh" text="{i18n>Reset}" tooltip="{i18n>Reset}" type="Reject" press="onResetSoldToParty">
					<layoutData>
						<l:GridData span="XL3 L3 M4 S6"/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
		<Table inset="false" id="idSoldtoPartyTable" growing="true" growingThreshold="10" fixedLayout="true" items="{SoldToPartyModel>/results}"
			mode="SingleSelectMaster" selectionChange="onSTPSelectionChange" updateFinished="updateCountSoldtoPartyF4">
			<headerToolbar>
				<Toolbar>
					<Label text="{i18n>customerList} ({=${SoldToPartyModel>/totalRecords}})" design="Bold"/>
					<ToolbarSpacer></ToolbarSpacer>
					<Button icon="sap-icon://sort" type="Transparent" tooltip="{i18n>Sort}"
						press="onSortPress($event, 'idSoldtoPartyTable', '/SoldToPartySort', 'CustCode')"/>
					<SearchField width="32%" id="idSearchSoldToParty" liveChange="onLiveSearchSoldToParty($event, 'idSoldtoPartyTable')"></SearchField>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column hAlign="Left">
					<Label design="Bold" text="{i18n>customerId}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
					<Label design="Bold" text="{i18n>customerName}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
					<Label design="Bold" text="{i18n>divisionCustIdFragLabel}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
					<Label design="Bold" text="{i18n>distChanlCustIdFragLabel}" tooltip="{i18n>tltpDistChan}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet" hAlign="Left" popinDisplay="Inline">
					<Label design="Bold" text="{i18n>salesOrgCustIdFragLabel}" tooltip="{i18n>tltpSalesOrg}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<Text text="{SoldToPartyModel>CustCode}" textAlign="Left"/>
					<Text text="{SoldToPartyModel>Name1}" textAlign="Left"/>
					<Text text="{SoldToPartyModel>DName}" textAlign="Left"/>
					<Text text="{SoldToPartyModel>DCName}" textAlign="Left"/>
					<Text text="{SoldToPartyModel>SOrgName}" textAlign="Left"/>
				</ColumnListItem>
			</items>
		</Table>
